{
  "name": "sherry",
  "version": "1.4.0",
  "description": "A Well-Brewed Scaffolding Tool",
  "repository": {
    "url": "https://github.com/ulivz/sherry.git",
    "type": "git"
  },
  "main": "lib/index.js",
  "bin": "bin/cli.js",
  "files": [
    "lib",
    "bin",
    "!**/__test__/**"
  ],
  "scripts": {
    "test": "npm run lint && ava",
    "lint": "xo",
    "release": "release-it",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress dev docs"
  },
  "author": "ULIVZ <chl814@foxmail@foxmail.com>",
  "license": "MIT",
  "dependencies": {
    "cac": "^5.0.15",
    "chalk": "^2.4.1",
    "conf": "^2.0.0",
    "cross-spawn": "^6.0.5",
    "download-git-repo": "^1.1.0",
    "fs-extra": "^7.0.0",
    "hash-sum": "^1.0.2",
    "ini": "^1.3.5",
    "inquirer": "^6.2.0",
    "is-binary-path": "^2.0.0",
    "joycon": "^2.1.2",
    "jstransformer": "^1.0.0",
    "jstransformer-ejs": "^0.2.0",
    "majo": "^0.6.2",
    "micromatch": "^3.1.10",
    "ora": "^3.0.0",
    "parse-package-name": "^0.1.0",
    "resolve-from": "^4.0.0",
    "strip-ansi": "^5.0.0",
    "text-table": "^0.2.0",
    "tildify": "^1.2.0",
    "update-notifier": "^2.5.0",
    "wcwidth": "^1.0.1",
    "yarn-global": "^1.1.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-await-in-loop": "off",
      "unicorn/filename-case": "off"
    }
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "sherry",
    "generator",
    "ulivz",
    "yeoman",
    "template",
    "scaffold",
    "scaffolding",
    "automation",
    "kirito",
    "simple",
    "easy",
    "workflow"
  ]
}
